@model SurveysProject.Models.Data.User

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/42daf7d6ae.js" crossorigin="anonymous"></script>
</head>

<body>
    <h1 style="text-align:center; margin-top:10%">Login</h1>
    <form class="col-md-5" style="margin-left:30%" asp-action="Login" asp-route-id="Id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email address:</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" id="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" id="password">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <p style="color:red; margin-top:2%; margin-bottom:2%">@ViewBag.error</p>
        <input type="submit" class="btn btn-primary" value="Login" style="margin-left:40%"/>
    </form>
</body>

</html>

