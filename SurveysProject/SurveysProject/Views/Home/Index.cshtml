@model IEnumerable<SurveysProject.Models.Survey>

@{
    ViewData["Title"] = "Home Page";
}

<body>

    <table class="table">
        <thead>
            <tr style="background-image: linear-gradient(120deg, chartreuse, green)">
                <th>
                    @Html.DisplayNameFor(model=> model.Title)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>

                    <td>
                        <a href="@Url.Action("Index", "CompleteSurvey", new {surveyId= item.Id})" class="btn btn-outline-success">Complete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</body>

