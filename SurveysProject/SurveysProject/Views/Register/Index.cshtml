@model SurveysProject.Models.Data.User

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] Regiter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/42daf7d6ae.js" crossorigin="anonymous"></script>
</head>


<body>
    <h1 style="text-align:center">Register</h1>
    <form class="col-md-5" style="margin-left:30%" asp-action="AddUser" asp-route-id="Id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label asp-for="Role">Role:</label>
            <input asp-for="Role" class="form-control" placeholder="Enter role. Ex.: Student or Teacher">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email address:</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" id="email">
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="form-control" placeholder="Enter password" id="pwd">
        </div>
        <button type="submit" class="btn btn-primary">Create account</button>
    </form>
</body>

</html>
