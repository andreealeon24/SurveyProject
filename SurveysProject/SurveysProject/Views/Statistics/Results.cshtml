@model SurveysProject.Models.ViewModels.StatisticsModel

@{
    ViewData["Title"] = "Statistics results";
}

<body>

    <h2 id="survey">@Model.Survey.Title : @Model.NumberOfResponses responses</h2>

    @foreach (var question in Model.QuestionStatistics)
    { <h3 id="question">@question.Question.Text</h3>

    <table class="table">
        <thead>
            <tr class="text-white" style="background-color: #4d90ba ">

                <th>
                    Options
                </th>
                <th>
                    Responses
                </th>
            </tr>
        </thead>

        @foreach (var option in question.QuestionOptionModels)
        {
        <tbody>
            <tr>
                <td>
                    @option.QuestionOption.QuestionOptionText
                </td>

                <td>
                    @option.countQuestionOptionSelected
                </td>
            </tr>
        </tbody>
        }
    </table>
    }

</body>

